{
	"name": "vue-swiper",
	"version": "1.0.0",
	"description": "A swiper carousel component for Vue.js",
	"author": "Andreas Sonnleitner <andreassonnleitner@gmail.com>",
	"scripts": {
		"serve": "vue-cli-service serve --open ./demo/main.js",
		"test:unit": "vue-cli-service test:unit",
		"lint": "vue-cli-service lint",
		"build-bundle": "vue-cli-service build --target lib --name VueSwiper src/Swiper.vue && rm dist/demo.html",
		"build-docs": "vue-cli-service build ./demo/main.js --dest ./docs --modern"
	},
	"main": "src/index.js",
	"unpkg": "dist/VueSwiper.umd.min.js",
	"files": [
		"dist/*",
		"src/*",
		"*.json",
		"*.js"
	],
	"dependencies": {
		"lodash.orderby": "^4.6.0",
		"lodash.throttle": "^4.1.1"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.6.0",
		"@vue/cli-plugin-eslint": "^3.6.0",
		"@vue/cli-plugin-unit-jest": "^4.3.1",
		"@vue/cli-service": "^4.3.1",
		"@vue/eslint-config-standard": "^4.0.0",
		"@vue/test-utils": "1.0.0-beta.31",
		"babel-eslint": "^10.0.1",
		"eslint": "^5.16.0",
		"eslint-plugin-pug": "^1.2.2",
		"eslint-plugin-vue": "^5.0.0",
		"pug": "^2.0.3",
		"pug-plain-loader": "^1.0.0",
		"sass": "^1.18.0",
		"sass-loader": "^8.0.2",
		"vue": "^2.6.10",
		"vue-template-compiler": "^2.5.21"
	},
	"bugs": {
		"url": "https://github.com/asonnleitner/vue-swiper.git"
	},
	"keywords": [
		"vue",
		"component",
		"slider",
		"carousel",
		"slide",
		"swiper"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/asonnleitner/vue-swiper.git"
	}
}
